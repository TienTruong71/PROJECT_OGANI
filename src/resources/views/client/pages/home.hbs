<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
                <div class="featured__controls">
                    <li class="active" data-filter="*"></li>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            {{#if listPro.length}}
            {{#each listPro}}
            <div class="col-lg-3 col-md-4 col-sm-6 mix">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="{{this.thumbnail}}">
                        <ul class="featured__item__pic__hover">
                            <li><a href="/product/{{this._id}}"><i class="fa fa-heart"></i></a></li>
                            <li><a href="/product/{{this._id}}"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="/product/{{this._id}}"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="/product/{{this._id}}">{{this.title}}</a></h6>
                        <h5>{{this.sellPrice}}₫</h5>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <p>Không có sản phẩm nào.</p>
            {{/if}}
        </div>

    </div>
</section>
<!-- Featured Section End -->