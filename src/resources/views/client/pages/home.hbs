    </div>
        </div>
      </div>

    </div>
  </div>
</section>
<script>
  $(document).ready(function(){
    $(".latest-product__slider").owlCarousel({
      items: 1,
      loop: true,
      autoplay: true,
      autoplayTimeout: 3000, // 3 giây
      smartSpeed: 800,
      dots: false,
      nav: false
    });

    // Đặt hình nền từ data-setbg
    $('.set-bg').each(function () {
      var bg = $(this).data('setbg');
      $(this).css('background-image', 'url(' + bg + ')');
    });
  });
</script>
