            </div>
            <div class="latest-product__item__text">
              <h6><a href="/product/{{this.slug}}">{{this.title}}</a></h6>
              <h5>{{this.sellPrice}}₫</h5>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p>Không có sản phẩm nào.</p>
