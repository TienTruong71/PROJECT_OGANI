<!-- Add to Cart JavaScript -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const addCartForm = document.getElementById('addCartForm');
    
    if (addCartForm) {
      addCartForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const productId = this.action.split('/').pop();
        const quantity = formData.get('qty');
        
        fetch(this.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: `qty=${quantity}`
        })
        .then(response => {
          if (response.ok) {
            Swal.fire({
              title: 'Thành công!',
              text: 'Sản phẩm đã được thêm vào giỏ hàng',
              icon: 'success',
              confirmButtonText: 'Xem giỏ hàng',
              showCancelButton: true,
              cancelButtonText: 'Tiếp tục mua sắm'
            }).then((result) => {
              if (result.isConfirmed) {
                window.location.href = '/cart';
              }
            });
            
            // Cập nhật số lượng sản phẩm trong giỏ hàng (nếu có hiển thị)
            updateCartCount();
          } else {
            Swal.fire({
              title: 'Lỗi!',
              text: 'Không thể thêm sản phẩm vào giỏ hàng',
              icon: 'error',
              confirmButtonText: 'Đóng'
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            title: 'Lỗi!',
            text: 'Đã xảy ra lỗi khi thêm sản phẩm vào giỏ hàng',
            icon: 'error',
            confirmButtonText: 'Đóng'
          });
        });
      });
    }
    
    // Hàm cập nhật số lượng sản phẩm trong giỏ hàng
    function updateCartCount() {
      fetch('/cart/count')
        .then(response => response.json())
        .then(data => {
          const cartCountElement = document.querySelector('.header__cart__price span');
          if (cartCountElement) {
            cartCountElement.textContent = data.count;
          }
        })
        .catch(error => console.error('Error updating cart count:', error));
    }
  });
</script>

