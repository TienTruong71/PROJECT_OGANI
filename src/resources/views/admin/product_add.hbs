<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Thêm sản phẩm - Trang Quản Trị</title>
  <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
  <link href="/css/styles_admin.css" rel="stylesheet" />
  <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
  {{#if errorMessage}}
  <script>
    alert("{{errorMessage}}");
  </script>
  {{/if}}

  <!-- Thanh điều hướng -->
  <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand ps-3" href="/admin">Trang Quản Trị</a>
    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
      <div class="input-group">
        <input class="form-control" type="text" placeholder="Tìm kiếm..." />
        <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
      </div>
    </form>
    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
          <i class="fas fa-user fa-fw"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <li><a class="dropdown-item" href="#">{{user.username}}</a></li>
          <li><hr class="dropdown-divider" /></li>
          <li><a class="dropdown-item" href="/logout">Đăng xuất</a></li>
        </ul>
      </li>
    </ul>
  </nav>

  <!-- Bố cục giao diện -->
  <div id="layoutSidenav">
    <!-- Sidebar -->
    <div id="layoutSidenav_nav">
      <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
          <div class="nav">
            <div class="sb-sidenav-menu-heading">Quản lý</div>
            <a class="nav-link" href="/admin/category">
              <div class="sb-nav-link-icon"><i class="fa-solid fa-list"></i></div>
              Quản lý danh mục
            </a>
            <a class="nav-link" href="/admin/order">
              <div class="sb-nav-link-icon"><i class="fa-solid fa-money-bill"></i></div>
              Quản lý đơn hàng
            </a>
            <a class="nav-link" href="/admin/customer">
              <div class="sb-nav-link-icon"><i class="fa-solid fa-users"></i></div>
              Quản lý khách hàng
            </a>
            <a class="nav-link" href="/admin/staff">
              <div class="sb-nav-link-icon"><i class="fa-solid fa-user-tie"></i></div>
              Quản lý nhân viên
            </a>
          </div>
        </div>
        <div class="sb-sidenav-footer">
          <div class="small">Xin chào,</div>
          {{user.username}}
        </div>
      </nav>
    </div>

    <!-- Nội dung -->
    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid px-4">
          <br>
          <div class="card mb-4">
            <div class="card-header">
              <strong style="font-size: 20px;">Thêm sản phẩm <i class="fas fa-plus"></i></strong>
            </div>
            <div class="card-body">
              <form action="/admin/product/add" method="POST">
                <div class="mb-3">
                  <label for="title" class="form-label">Tên sản phẩm</label>
                  <input type="text" class="form-control" id="title" name="title" placeholder="Nhập tên sản phẩm" required>
                </div>
                <div class="mb-3">
                  <label for="description" class="form-label">Mô tả</label>
                  <textarea class="form-control" id="description" name="description" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                </div>
                <div class="mb-3">
                  <label for="sellPrice" class="form-label">Giá bán</label>
                  <input type="number" step="0.01" class="form-control" id="sellPrice" name="sellPrice" placeholder="Nhập giá bán" required>
                </div>
                <div class="mb-3">
                  <label for="mfg" class="form-label">Ngày sản xuất</label>
                  <input type="date" class="form-control" id="mfg" name="mfg">
                </div>
                <div class="mb-3">
                  <label for="exp" class="form-label">Hạn sử dụng</label>
                  <input type="date" class="form-control" id="exp" name="exp">
                </div>
                <div class="mb-3">
                  <label for="thumbnail" class="form-label">Ảnh sản phẩm (URL)</label>
                  <input type="url" class="form-control" id="thumbnail" name="thumbnail" placeholder="Nhập đường dẫn ảnh">
                </div>
                <input type="hidden" name="categoryId" value="{{categoryId}}">
                <div class="mb-3">
                  <label for="quantity" class="form-label">Số lượng</label>
                  <input type="number" class="form-control" id="quantity" name="quantity" min="1" placeholder="Nhập số lượng" required>
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="/admin/category/view/{{categoryId}}" class="btn btn-secondary">Hủy</a>
              </form>
            </div>
          </div>
        </div>
      </main>

      <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
          <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Bản quyền &copy; Trang quản trị của nhóm 1</div>
            <div>
              <a href="#">Chính sách bảo mật</a>
              &middot;
              <a href="#">Điều khoản &amp; điều kiện</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="/js/scripts.js"></script>
</body>
</html>
